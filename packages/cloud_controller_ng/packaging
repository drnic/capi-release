set -e -x

cp -a capi-release/src/* ${BOSH_INSTALL_TARGET}
cd ${BOSH_INSTALL_TARGET}/cloud_controller_ng

mariadb_dir=/var/vcap/packages/mariadb_connector_c
libpq_dir=/var/vcap/packages/libpq

source /var/vcap/packages/ruby-2.4/bosh/compile.env

echo `/var/vcap/packages/ruby-2.3/bin/bundle --version`
echo `/var/vcap/packages/ruby-2.4/bin/bundle --version`

/var/vcap/packages/ruby-2.4/bin/bundle config build.pg --with-pg-lib=$libpq_dir/lib --with-pg-include=$libpq_dir/include
/var/vcap/packages/ruby-2.4/bin/bundle config build.mysql2 --with-mysql-config=$mariadb_dir/bin/mariadb_config
/var/vcap/packages/ruby-2.4/bin/bundle install --local --deployment --without development test
